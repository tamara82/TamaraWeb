        <servlet-class>controlador.ServletAltaUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAutenticador</servlet-name>
        <servlet-class>controlador.ServletAutenticador</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletAltaVenta</servlet-name>
        <url-pattern>/ServletAltaVenta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAltaDisco</servlet-name>
        <url-pattern>/ServletAltaDisco</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletModificarVenta</servlet-name>
        <url-pattern>/ServletModificarVenta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletModificarDisco</servlet-name>
